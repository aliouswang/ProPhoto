<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alious.pro.simple.MainActivity">

    <com.alious.pro.photo.library.widget.RatioImageView
        android:id="@+id/img_head"
        fresco:actualImageScaleType="centerCrop"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btn_start"
        android:text="start animation"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<com.alious.pro.photo.library.widget.NineFrescoGridViewGroup-->
        <!--android:id="@+id/nine_grid"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="wrap_content"/>-->

    <com.alious.pro.photo.library.widget.NinePicassoGridViewGroup
        android:id="@+id/nine_grid"
        android:layout_width="200dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <com.alious.pro.photo.library.widget.NineFrescoGridViewGroup
        android:id="@+id/nine_grid2"
        android:visibility="gone"
        android:layout_below="@+id/nine_grid"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
